<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:fillViewport="true"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout android:background="#ffffffff"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:id="@id/header" android:background="@layout/header_gradient"
			android:paddingTop="5.0dip" android:paddingBottom="5.0dip"
			android:layout_width="fill_parent" android:layout_height="wrap_content">
			<ImageView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:layout_marginLeft="10.0dip"
				android:src="@drawable/logo" />
		</LinearLayout>
		<LinearLayout android:orientation="horizontal"
			android:id="@id/footer" android:background="@layout/footer_repeat"
			android:padding="10.0dip" android:layout_width="fill_parent"
			android:layout_height="80.0dip" 
			android:layout_alignParentBottom="true" />
		<LinearLayout android:orientation="vertical"
			android:padding="10.0dip" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:layout_below="@id/header">
			
			<LinearLayout android:orientation="vertical"
				android:padding="10.0dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				
				<Button 
				    android:id="@id/btLogin" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="Login with LinkedIn" 
					android:onClick="linkedInLogin"/>
				
				<TextView android:orientation="vertical"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:text="  " />
				
				<Button android:id="@id/btLoginf" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="Login with Facebook" 
					android:onClick="facebookLogin"/>
				
				
				
			</LinearLayout>
			<TextView android:gravity="center" android:id="@id/textView1"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:text="OR" />
			<LinearLayout android:orientation="vertical"
				android:padding="10.0dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<EditText android:id="@id/email" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_marginTop="5.0dip"
					android:layout_marginBottom="20.0dip" android:hint="@string/email"
					android:singleLine="true" />
				<EditText android:id="@id/password" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_marginTop="5.0dip"
					android:hint="@string/passc" android:ems="10" android:password="true"
					android:singleLine="true">
					<requestFocus />
				</EditText>
			</LinearLayout>
			<TableRow android:gravity="center" android:orientation="vertical"
				android:layout_width="wrap_content" android:layout_height="wrap_content"
				android:layout_margin="10.0dip">
				<CheckBox android:id="@id/rememberMe" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
				<TextView android:id="@id/textView2" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text=" " />
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:text="Remember me" />
			</TableRow>
			<LinearLayout android:orientation="vertical"
				android:padding="10.0dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<Button android:id="@id/login" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:layout_marginTop="10.0dip"
					android:text="Login" />
			</LinearLayout>
			<LinearLayout android:orientation="vertical"
				android:padding="10.0dip" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:textColor="#ff00ccff" android:gravity="center"
					android:id="@id/forget" android:layout_width="fill_parent"
					android:layout_height="wrap_content" android:text="Forget Password?" />
				<TableRow android:gravity="center" android:orientation="vertical"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
					android:layout_margin="10.0dip">
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text="Don't have accaunt?" />
					<TextView android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:text=" " />
					<TextView android:textColor="#ff00ccff" android:id="@id/register"
						android:layout_width="wrap_content" android:layout_height="wrap_content"
						android:text="Sign up here" />
				</TableRow>
				<TableRow android:orientation="vertical" android:padding="30.0dip"
					android:layout_width="fill_parent" android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</ScrollView>