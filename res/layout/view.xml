<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/RootView" android:background="#ffffffff" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/header_bar" />
    <RelativeLayout 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent">
        
        <ScrollView 
            android:id="@id/poi_scroll" 
            android:scrollbars="none" 
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/madad">
            
            <LinearLayout 
                 android:orientation="vertical"
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent">
                 
                <RelativeLayout 
                    android:orientation="horizontal"
                    android:background="#ffe8ecec"
                    android:layout_width="fill_parent"
                    android:layout_height="150.0dip">
                    
                    <RelativeLayout 
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:id="@id/image_action"
                        android:background="#ffe8ecec"
                        android:padding="5.0dip"
                        android:layout_width="160.0dip"
                        android:layout_height="100.0dip"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginTop="5.0dip"
                        android:weightSum="1.0">
                        
                        <ImageView
                             android:background="@drawable/bg_thumb"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />
                        
                        <ImageView android:id="@id/poi_image"
                             android:background="@drawable/poi_image_test"
                             android:visibility="visible"
                             android:layout_width="141.0dip"
                             android:layout_height="82.0dip"
                             android:layout_marginLeft="4.0dip"
                             android:layout_marginTop="2.0dip"
                             android:scaleType="centerCrop" />
                        
                    </RelativeLayout>
                    
                  
                    
                   
                    <LinearLayout 
                        android:gravity="center_vertical"
                        android:orientation="vertical" 
                        android:id="@id/phone_action" 
                        android:background="#ffe8ecec" 
                        android:paddingLeft="5.0dip" 
                        android:layout_width="fill_parent" 
                        android:layout_height="100.0dip" 
                        android:layout_marginLeft="160.0dip" 
                        android:layout_marginTop="5.0dip" 
                        android:weightSum="1.0">
                        
                        <TextView android:textSize="16.0dip" 
                          android:textStyle="bold" 
                          android:textColor="#ff000000" 
                          android:ellipsize="end" 
                          android:id="@id/poi_name" 
                          android:layout_width="wrap_content" 
                          android:layout_height="wrap_content" 
                          android:layout_marginTop="8.0dip" 
                          android:layout_marginRight="4.0dip" 
                          android:text="Ganboa de Praia" 
                          android:maxLines="2" />
                        
                        <LinearLayout 
                            android:orientation="vertical" 
                            android:layout_width="fill_parent" 
                            android:layout_height="fill_parent">
                            
                            <TextView android:textSize="14.0dip" 
                                android:textColor="#ff8f8f8f"
                                 android:id="@id/category"
                                 android:layout_width="wrap_content" 
                                 android:layout_height="wrap_content" 
                                 android:layout_marginTop="2.0dip" 
                                 android:layout_marginRight="15.0dip" 
                                 android:text="Hoteis" />
                            
                            <TextView 
                                android:textSize="14.0dip" 
                                android:textColor="#ff8f8f8f" 
                                android:id="@id/phone" 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" 
                                android:layout_marginRight="15.0dip" 
                                android:text="+3469958684" />
                            
                        </LinearLayout>
                        
                    </LinearLayout>
                    <LinearLayout 
                        android:gravity="center" 
                        android:orientation="horizontal" 
                        android:id="@id/map_button" 
                        android:background="@drawable/curved_gray" 
                        android:layout_width="35.0dip" 
                        android:layout_height="45.0dip" 
                        android:layout_marginLeft="14.0dip" 
                        android:layout_marginTop="110.0dip">
                        
                        <ImageView 
                            android:background="@drawable/poi_map" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout 
                        android:gravity="center" 
                        android:orientation="horizontal" 
                        android:id="@id/favorite_button" 
                        android:background="@drawable/curved_gray" 
                        android:layout_width="35.0dip" 
                        android:layout_height="40.0dip"
                        android:layout_marginLeft="60.0dip" 
                        android:layout_marginTop="110.0dip">
                        
                        <ImageView 
                            android:background="@drawable/poi_fav" 
                            android:layout_width="20.0dip" 
                            android:layout_height="20.0dip" />
                    </LinearLayout>
                    
                    <LinearLayout 
                        android:gravity="center" 
                        android:orientation="horizontal" 
                        android:id="@id/photos_button"
                         android:background="@drawable/curved_gray" 
                         android:layout_width="90.0dip" 
                         android:layout_height="40.0dip" 
                         android:layout_marginLeft="105.0dip" 
                         android:layout_marginTop="110.0dip">
                        
                        <ImageView 
                            android:background="@drawable/poi_media" 
                            android:layout_width="wrap_content"
                             android:layout_height="wrap_content" />
                        <LinearLayout 
                            android:gravity="center" 
                            android:orientation="horizontal" 
                            android:background="#ff979797"
                             android:layout_width="wrap_content" 
                             android:layout_height="wrap_content">
                            
                            <TextView android:textSize="14.0dip" 
                                android:textColor="#ffffffff" 
                                android:id="@id/cant_pictures_text" 
                                android:layout_width="fill_parent" 
                                android:layout_height="fill_parent" 
                                android:layout_marginLeft="6.0dip" 
                                android:text="@string/pictures" />
                            
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout 
                        android:gravity="center" 
                        android:orientation="horizontal" 
                        android:id="@id/url_button" 
                        android:background="@drawable/curved_black" 
                        android:layout_width="105.0dip" 
                        android:layout_height="40.0dip" 
                        android:layout_marginLeft="205.0dip" 
                        android:layout_marginTop="110.0dip" 
                        android:layout_marginRight="14.0dip">
                        
                        <TextView 
                            android:textSize="14.0dip" 
                            android:textColor="#ffffffff" 
                            android:id="@id/call_action" 
                            android:layout_width="wrap_content" 
                            android:layout_height="wrap_content" 
                            android:text="@string/call" />
                        
                    </LinearLayout>
                </RelativeLayout>
                
                <LinearLayout 
                    android:orientation="horizontal" 
                    android:layout_width="fill_parent" 
                    android:layout_height="40.0dip">
                    <ImageView 
                        android:background="@drawable/arrow_header" 
                        android:layout_width="wrap_content" 
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout 
                     android:orientation="vertical" 
                     android:id="@id/experiences_container"
                     android:layout_width="fill_parent" 
                     android:layout_height="wrap_content" />
                
            </LinearLayout>
            
        </ScrollView>
        
    </RelativeLayout>
    
</LinearLayout>