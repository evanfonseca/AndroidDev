<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Inputs" parent="@*android:style/Widget.EditText">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@drawable/curved_inputs</item>
        <item name="android:padding">8.0dip</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
    <style name="WhiteBg">
        <item name="android:background">#ffffffff</item>
    </style>
    <style name="ButtonGray" parent="@*android:style/Widget.Button">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ff36383e</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/gray_button_theme</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="SombraTexto" parent="@*android:style/Widget.TextView">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">0.2</item>
    </style>
    <style name="ButtonGreen" parent="@*android:style/Widget.Button">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/green_button_theme</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="SkipButton" parent="@*android:style/Widget.Button">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/skip_button_theme</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">0.0</item>
        <item name="android:shadowRadius">0.0</item>
    </style>
    <style name="minube_theme" parent="@*android:style/Theme.NoTitleBar">
        <item name="android:buttonStyle">@style/ButtonGray</item>
        <item name="android:windowBackground">@color/list_bg</item>
        <item name="android:editTextStyle">@style/Inputs</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>
